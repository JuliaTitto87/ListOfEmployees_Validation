@model ListOfEmployees__DomainModel.Employee
@using ListOfEmployees.Controllers
@using System.Linq

<h2>Добавление нового работника</h2>
@using (Html.BeginForm(
actionName: nameof(EmployeeController.Create),
controllerName: Html.ViewContext.RouteData.Values["controller"].ToString(),
FormMethod.Post))
{

    <div>
        <div>
            <label style="width:200px"> ФИО работника</label>
            @Html.EditorFor(model => model.FullName)
            <label style="color:crimson"> @Html.ValidationMessageFor(model => model.FullName)</label>
        </div>

        <div>
            <label style="width:200px"> Табельный номер </label>
            @Html.EditorFor(model => model.PersonnelNumber)
            <label style="color:crimson">@Html.ValidationMessageFor(model => model.PersonnelNumber)</label>
        </div>

        <div>
            <label style="width:200px"> Отдел </label>
            @Html.EditorFor(model => model.Department)
            <label style="color:crimson">@Html.ValidationMessageFor(model => model.Department)</label>

        </div>
        <div>
            <label style="width:200px"> Должность </label>
            @Html.EditorFor(model => model.EmployeesPosition)
            <label style="color:crimson">@Html.ValidationMessageFor(model => model.EmployeesPosition)</label>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить работника" class="btn btn-primary" />
    </div>

}